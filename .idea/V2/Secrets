apiVersion: v1
kind: Pod
metadata:
  name: nginx
spec:
  containers:
  - name: mynginx
    image: registry.rebrainme.com/workshops/middle/kubernetes-local/newplatform_autochecks/nginx:latest
    volumeMounts:
    - name: config-volume
      mountPath: /etc/nginx/nginx.conf
      subPath: nginx.conf
  volumes:
  - name: config-volume
    configMap:
      name: nginx-config
      items:
        - key: nginx.conf
          path: nginx.conf
  imagePullSecrets:
  - name: regcred


apiVersion: v1
kind: Pod
metadata:
  name: nginx
spec:
  containers:
  - name: mynginx
    image: registry.rebrainme.com/workshops/middle/kubernetes-local/newplatform_autochecks/nginx:latest
    env:
      - name: MY_NODE
        valueFrom:
          fieldRef:
            fieldPath: spec.nodeName
    volumeMounts:
    - name: config-volume
      mountPath: /etc/nginx/nginx.conf
      subPath: nginx.conf
  volumes:
  - name: config-volume
    configMap:
      name: nginx-config
      items:
        - key: nginx.conf
          path: nginx.conf
  imagePullSecrets:
  - name: regcred





